<concept id="delete">

  <title>DELETE Statement (<keyword keyref="impala28"/> or higher only)</title>
  <titlealts audience="PDF"><navtitle>DELETE</navtitle></titlealts>
  <prolog>
    <metadata>
      <data name="Category" value="Impala"/>
